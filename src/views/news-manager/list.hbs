<div class="container pt-4">
    <div class="row row-cols-1 row-cols-md-2 g-3">
        {{#each articles}}
            <div class="col">
                <div class="card text-white bg-dark border-light" style="height: 250px;">
                    <div class="row h-100">
                        <div class="col-md-5 h-100 overflow-hidden">  
                            <img src="../{{articleImage}}" alt="" class="h-100">
                        </div>
                        <div class="card-body col-md-7">
                            <h5 class="card-title">
                                news/{{articleRoute}}
                            </h5>
                            <h4 class="card-title">
                                {{articleTitle}}
                            </h4>
                            <p class="fs-6">
                                {{dateFormat articleDate}}
                            </p>
                            <p>
                                {{articleDescription}}
                            </p>
                            <div>
                                <a href="/articles-manager/delete/{{articleId}}" class="btn btn-danger" class="col-md-6">Delete</a>
                                <a href="/articles-manager/edit/{{articleId}}" class="btn btn-secondary" class="col-md-6">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>    
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are not articles yet.</p>
                    <a href="/articles-manager/add">Create one</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>